<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView77"
        android:layout_width="365dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="Hello World! \n Welcome to our course"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="128dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="33dp"
        android:hint="Please enter your name"
        app:layout_constraintBottom_toTopOf="@+id/buttonSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="235dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:hint="what language do you prefer?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview3" />

    <Button
        android:id="@+id/buttonSecond"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="303dp"
        android:layout_marginBottom="649dp"
        android:text="Say hello"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageview3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <ImageView
        android:id="@+id/imageview3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="338dp"
        android:layout_marginEnd="191dp"
        android:layout_marginBottom="407dp"
        android:src="@drawable/fb_logo"
        app:layout_constraintBottom_toTopOf="@+id/myImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonSecond"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/myEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginBottom="212dp"
        android:background="@color/black"
        android:hint="Please do something hint"
        android:inputType="phone"
        android:maxLength="30"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview3" />

    <Button
        android:id="@+id/myButton"
        android:layout_width="160dp"
        android:layout_height="171dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="282dp"
        android:text="Click me"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/myEditText"
        app:layout_constraintTop_toBottomOf="@+id/myEditText" />

    <ImageView
        android:id="@+id/myImage"
        android:layout_width="275dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:src="@drawable/fb_logo"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview3" />
</androidx.constraintlayout.widget.ConstraintLayout>